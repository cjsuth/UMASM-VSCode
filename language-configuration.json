{
    "comments": {
        "lineComment": "#"
    },
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
    // indendation rules are weird, so disabled for now
    // "indentationRules": {
    //     "increaseIndentPattern": "^((?!\\/\\/).)*(:[^}\"'`]*)$",
    //     "decreaseIndentPattern": "^[^ ]$"
    // }
}